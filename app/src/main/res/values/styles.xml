<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorPrimary">@color/text</item>
  </style>

  <style name="CameraActivity" parent="AppTheme">
    <item name="android:windowSharedElementExitTransition">@null</item>
    <item name="android:windowSharedElementReenterTransition">@null</item>
  </style>

  <style name="DetailActivity" parent="AppTheme">
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:windowSharedElementEnterTransition">@transition/changebounds_with_arcmotion</item>
    <item name="android:windowSharedElementReturnTransition">@transition/changebounds_with_arcmotion_return</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
  </style>

  <style name="PalettesActivity" parent="AppTheme">
    <item name="colorPrimaryDark">@android:color/transparent</item>
    <item name="android:windowBackground">@color/background</item>
    <!-- specify enter and exit transitions -->
    <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    <item name="android:windowExitTransition">@transition/slide_top</item>
    <!-- specify shared element transitions -->
    <item name="android:windowSharedElementExitTransition">@null</item>
    <item name="android:windowSharedElementReenterTransition">@null</item>
    <item name="android:windowSharedElementEnterTransition">@transition/palettes_activity_transition_enter</item>
    <item name="android:windowSharedElementReturnTransition">@transition/palettes_activity_transition_return</item>
    <item name="android:windowAllowReturnTransitionOverlap">false</item>
  </style>

  <style name="GeneratedColorsActivity" parent="AppTheme">
    <item name="colorPrimaryDark">@android:color/transparent</item>
    <item name="android:windowBackground">@color/background</item>
    <!-- specify enter and exit transitions -->
    <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    <item name="android:windowReturnTransition">@transition/slide_top_fade</item>
    <!-- specify shared element transitions -->
    <item name="android:windowSharedElementEnterTransition">@transition/changebounds_with_arcmotion</item>
    <item name="android:windowSharedElementReturnTransition">@transition/changebounds_with_arcmotion_return</item>
    <item name="android:windowAllowReturnTransitionOverlap">false</item>
  </style>

  <style name="AuthenticationScreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="FavoriteColorsActivity" parent="AppTheme">
    <item name="colorPrimaryDark">@android:color/transparent</item>
    <item name="android:windowBackground">@color/background</item>
    <!-- specify enter and exit transitions -->
    <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    <item name="android:windowExitTransition">@transition/slide_top</item>
    <!-- specify shared element transitions -->
    <item name="android:windowSharedElementExitTransition">@null</item>
    <item name="android:windowSharedElementReenterTransition">@null</item>
    <item name="android:windowSharedElementEnterTransition">@transition/palettes_activity_transition_enter</item>
    <item name="android:windowSharedElementReturnTransition">@transition/palettes_activity_transition_return</item>
    <item name="android:windowAllowReturnTransitionOverlap">false</item>
  </style>
</resources>
