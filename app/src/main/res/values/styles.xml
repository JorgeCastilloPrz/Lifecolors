<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="MainActivity" parent="AppTheme">
    <item name="android:windowSharedElementExitTransition">@null</item>
    <item name="android:windowSharedElementReenterTransition">@null</item>
  </style>

  <style name="DetailActivity" parent="AppTheme">
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:windowSharedElementEnterTransition">@transition/changebounds_with_arcmotion</item>
    <item name="android:windowSharedElementReturnTransition">@transition/changebounds_with_arcmotion_return</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
  </style>
</resources>
