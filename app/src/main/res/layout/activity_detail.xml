<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".detail.DetailActivity"
    >

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="24dp"
      android:elevation="0dp"
      android:src="@drawable/ic_eye"
      android:tint="@color/white"
      android:transitionName="transition_reveal_contact"
      app:backgroundTint="@color/colorAccent"
      app:elevation="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="@color/white"
      />

  <ImageView
      android:id="@+id/picture"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:alpha="0"
      android:background="@color/background"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ContentDescription"
      />

  <dev.jorgecastillo.lifecolors.Overlay
      android:id="@+id/overlay"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:alpha="0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <dev.jorgecastillo.lifecolors.detail.view.BottomCutout
      android:id="@+id/bottomCutout"
      android:layout_width="186dp"
      android:layout_height="wrap_content"
      android:transitionName="cutout"
      android:alpha="0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <FrameLayout
      android:id="@+id/dotAnimationContainer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:elevation="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
