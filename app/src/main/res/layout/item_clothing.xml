<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:layout_width="120dp"
    android:layout_height="200dp"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner_radius"
    tools:cardBackgroundColor="#EAEAEA">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/spacing_big"
        android:background="@color/white"
        android:elevation="2dp"
        android:paddingStart="@dimen/spacing"
        android:paddingTop="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing"
        android:paddingBottom="@dimen/spacing_small"
        android:textAppearance="@style/Lifecolors.TextAppearance.Headline6"
        android:textColor="@color/price_color"
        android:textSize="16sp"
        tools:text="39.99â‚¬" />

    <ImageButton
        android:id="@+id/favButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:padding="@dimen/spacing"
        android:background="@drawable/bg_icon_button"
        android:src="@drawable/ic_favorite_border_dark"
        tools:ignore="ContentDescription" />
</androidx.cardview.widget.CardView>
